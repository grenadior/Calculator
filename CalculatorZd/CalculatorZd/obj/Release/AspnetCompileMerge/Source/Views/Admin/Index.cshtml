@using BO.Implementation
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div>
        <div style="white-space: pre-wrap; "></div>
        @Html.Raw( @ViewBag.CacheReport)

        @using (Ajax.BeginForm("ClearAllCache", "Admin", FormMethod.Post, null))
